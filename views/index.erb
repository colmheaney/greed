<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang='en'>
  <head>
    <link href='/css/bootstrap.css' rel='stylesheet' />
  </head>
  <body>
    <div class='navbar'>
      <div class='navbar-inner'>
        <div class='container'>
          <div class='brand'>
            Sinatra Chat
          </div>
        </div>
      </div>
    </div>
    <div class='container'>

      <h3 id="player"></h3>
      <p>Dice: <span id="dice"></span></p>
      <p>Points: <span id="points"></span></p>
      <p>Scoring dice <span id="scoring_dice"></span></p>
      <p>Remaining dice <span id="remaining_dice"></span></p>
      <p>Total Points: <span id="total_points"></span></p>

      <form class='form-stacked'>
        <div class='form-actions'>
          <div>
            <input class='btn' id="new" type='button' value="new game" />
            <input class='btn' id="roll" type='button' value="roll" />
            <input class='btn' id="bank" type='button' value="bank" />

          </div>
        </div>
      </form>
    </div>
    <script src='http://code.jquery.com/jquery-1.7.2.min.js'></script>
    <script src='/js/bootstrap.js'></script>
    <script src='/js/app.js'></script>
  </body>
</html>
